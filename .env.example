# Application
APP_NAME=graphrag-maintenance
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# LLM Provider Configuration
# Options: gemini, groq, openrouter, ollama
LLM_PROVIDER=gemini

# Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro

# Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-70b-versatile

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b

# Neo4j (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Qdrant (Vector Database)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# PostgreSQL (Metadata & Audit)
DATABASE_URL=postgresql+asyncpg://graphrag:your-postgres-password@localhost:5432/graphrag

# Redis (Caching)
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# MinIO/S3 (Document Storage)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=documents

# Embedding Model
EMBEDDING_MODEL=intfloat/e5-large-v2
EMBEDDING_DIMENSION=1024

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=graphrag-api

# Prefect (Workflow Orchestration)
PREFECT_API_URL=http://localhost:4200/api
